<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_splash_screen3"
    tools:context=".SplashScreen"
    android:padding="@dimen/dimen40">


    <TextView
        android:id="@+id/splash_sceen"
        android:layout_width="371dp"
        android:layout_height="310dp"
        android:layout_marginTop="@dimen/dimen200"
        android:gravity="center_horizontal|center_vertical"
        android:text="Welcome to Keimutan App"
        android:textColor="@color/texUtama"
        android:textSize="24sp"
        app:fontFamily="@font/merienda_one" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen20"
        android:layout_marginTop="@dimen/dimen324"
        app:srcCompat="@drawable/ic_titik"
        tools:ignore="VectorDrawableCompat" />
</RelativeLayout>